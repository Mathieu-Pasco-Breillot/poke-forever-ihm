<UserControl x:Name="ButtonDirection"
    x:Class="PokeForeverIHM.UsersControls.DirectionalCross"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PokeForeverIHM.UsersControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="60"
    d:DesignWidth="60">

    <RelativePanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Ellipse x:Name="UpBtn" Fill="#CC000000" HorizontalAlignment="Center" Height="52" Margin="0" Stroke="#CC000000" VerticalAlignment="Center" Width="52" RelativePanel.AlignHorizontalCenterWithPanel="True"/>
        <TextBlock x:Name="UpArrow" HorizontalAlignment="Center" TextWrapping="Wrap" Text="&#xE014;" VerticalAlignment="Center" Margin="0" FontFamily="Segoe MDL2 Assets" RelativePanel.AlignHorizontalCenterWith="UpBtn" RelativePanel.AlignVerticalCenterWith="UpBtn" FontSize="21.333" UseLayoutRounding="True" Foreground="White"/>        
    </RelativePanel>
</UserControl>
