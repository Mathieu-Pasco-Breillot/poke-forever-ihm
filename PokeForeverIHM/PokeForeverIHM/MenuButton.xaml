<UserControl
    x:Class="PokeForeverIHM.MenuButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PokeForeverIHM"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="80"
    d:DesignWidth="50">

    <Grid>
        <Button x:Name="menuButton" Content="&#xE700;" HorizontalAlignment="Center" Height="30" Margin="-15,25,-15,0" VerticalAlignment="Top" Width="80" RenderTransformOrigin="0.5,0.5" Foreground="White" FontFamily="Segoe MDL2 Assets" Background="#B2000000" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" RequestedTheme="Dark" Padding="0" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <Button.RenderTransform>
                <CompositeTransform Rotation="-270" ScaleX="-1"/>
            </Button.RenderTransform>
        </Button>
    </Grid>
</UserControl>
